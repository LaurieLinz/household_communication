<div class="page-header">
  <%= link_to chores_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_chore_path(@chore), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show chore</h1>
</div>

<dl class="dl-horizontal">
  <dt>Chore name:</dt>
  <dd><%= @chore.chore_name %></dd>

  <dt>Description:</dt>
  <dd><%= @chore.description %></dd>

  <dt>User to complete:</dt>
  <dd><%= @chore.user_to_complete %></dd>

</dl>
